#include <stdio.h>
#include <math.h>
#include <locale.h>

int main(void)
{
    setlocale(LC_ALL, "Portuguese");

    int i, n, total;

    printf("Vamos descobrir qual é o valor de N número ao quadrado\n");
    printf("Digite um valor para a quantidade N:");
    scanf("%d", &n);

    for(i = 1;i <= n; i ++){
            total = i*i;
            printf("%d^2 = %d\n", i, total);
    }
}
